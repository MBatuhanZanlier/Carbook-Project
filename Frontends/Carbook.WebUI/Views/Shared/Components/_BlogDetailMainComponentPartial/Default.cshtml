@model GetBlogById
<div class="col-md-8 ftco-animate">
    <h2 class="mb-3">@Model.Title</h2>
    <p>@Model.Description</p>
    @await Component.InvokeAsync("_BlogDetailCloudTagByIdBlogComponentPartial", new { id = ViewBag.blogid })
    @await Component.InvokeAsync("_BlogDetailAuthorAboutComponentPartial",new { id = ViewBag.blogid })
    <div class="pt-5 mt-5">
        <h3 class="mb-5">@ViewBag.commentcount Yorum</h3>
        @await Component.InvokeAsync("_CommentListByBlogComponentPartial")
        @await Component.InvokeAsync("_CommentAddByBlogComponentPartial")
    </div>
</div>
