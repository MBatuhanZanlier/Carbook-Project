
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Leave a comment</h3>
    <form method="post" asp-action="AddCommentByBlog" asp-controller="Blogs" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Adınız</label>
            <input type="text" class="form-control" name="Name">
        </div>
        <div class="form-group">
            <input type="hidden" value="@ViewBag.blogid" class="form-control" name="BlogId">
        </div>
        <div class="form-group">
            <label for="message">Mesajınız</label>
            <textarea name="Description" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>
    </form>
</div>

